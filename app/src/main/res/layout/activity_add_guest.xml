<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.home.guest.add.AddGuestActivity">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.evisitor.ui.main.home.guest.add.AddGuestViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:background="@color/colorDashboard"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <include layout="@layout/header"
        android:id="@+id/toolbar"/>

        <FrameLayout
            android:id="@+id/frame_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/white"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_circle_primary"
                android:padding="7dp"
                android:src="@drawable/ic_camera"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_img">

            <EditText
                android:id="@+id/et_identity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/enter_identityNo"
                android:background="@drawable/bg_search"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:autofillHints="name"
                android:textAlignment="center"
                tools:targetApi="o"
                app:layout_constraintTop_toTopOf="parent"
                android:textColorHint="@color/black40p"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/enter_name"
                android:background="@drawable/bg_search"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textAlignment="center"
                android:autofillHints="name"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/et_identity"
                android:textColorHint="@color/black40p"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_vehicle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/enter_vehicle"
                android:background="@drawable/bg_search"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textAlignment="center"
                android:autofillHints="name"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/et_name"
                android:textColorHint="@color/black40p"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/enter_contact"
                android:background="@drawable/bg_search"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textAlignment="center"
                android:autofillHints="name"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/et_vehicle"
                android:textColorHint="@color/black40p"
                android:inputType="number"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/enter_address"
                android:background="@drawable/bg_search"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textAlignment="center"
                android:autofillHints="name"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/et_contact"
                android:textColorHint="@color/black40p"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_search"
                android:id="@+id/tv_gender"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/futura_round_medium"
                android:hint="@string/select_gender"
                android:textColorHint="@color/black40p"
                app:layout_constraintTop_toBottomOf="@id/et_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <AutoCompleteTextView
                android:id="@+id/actv_house_no"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/select_house"
                android:background="@drawable/bg_search"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:imeOptions="actionDone"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:autofillHints="name"
                android:textAlignment="center"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/tv_gender"
                android:textColorHint="@color/black40p"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_search"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_owner"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/futura_round_medium"
                android:hint="@string/select_owner"
                android:textColorHint="@color/black40p"
                app:layout_constraintTop_toBottomOf="@id/actv_house_no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_search"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_host"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/futura_round_medium"
                android:hint="@string/select_host"
                android:textColorHint="@color/black40p"
                app:layout_constraintTop_toBottomOf="@id/tv_owner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_host,tv_owner"
                android:id="@+id/host_group"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_add"
                style="@style/PrimaryButton"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_host"
                android:text="@string/add"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_gender"
                app:layout_constraintStart_toStartOf="@id/tv_gender" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>