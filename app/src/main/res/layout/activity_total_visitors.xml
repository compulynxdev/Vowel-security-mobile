<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.home.total.TotalVisitorsActivity">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.evisitor.ui.main.home.total.TotalVisitorsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorDashboard"
        android:layout_height="match_parent">

        <include layout="@layout/header"
            android:id="@+id/header"/>
        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_card_corner"
            android:id="@+id/relative"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="18dp"
            android:layout_height="55dp">

            <TextView
                android:layout_width="0dp"
                android:id="@+id/title_guest"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/futura_round_medium"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/title_guests"
                android:textColor="@color/colorPrimaryDark"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/title_house"
                android:fontFamily="@font/futura_round_medium"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/title_house_keeping"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/title_service"
                android:fontFamily="@font/futura_round_medium"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/title_service_provider"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:id="@+id/search_bar"
            app:layout_constraintTop_toBottomOf="@id/relative"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_search"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/image" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/EditTextTheme"
                android:layout_gravity="center_vertical"
                android:hint="@string/search_data"
                android:background="@null"
                android:fontFamily="@font/futura_round_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/linear"
                android:autofillHints="name"
                tools:targetApi="o"
                android:imeOptions="actionSearch"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            android:id="@+id/viewPager"
            android:paddingBottom="12dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>