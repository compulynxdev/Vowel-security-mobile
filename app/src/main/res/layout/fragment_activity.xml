<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <include
                android:id="@+id/header"
                layout="@layout/header" />



            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_card_corner"
                android:id="@+id/relative"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:layout_height="55dp">
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tab_layout"
                    android:background="@drawable/bg_card_corner"
                    app:tabIndicatorHeight="0dp"
                    android:layout_centerInParent="true"
                    app:tabMode="scrollable"
                    app:tabIndicatorGravity="center"
                    app:tabTextAppearance="@style/CustomTabText"
                    app:tabTextColor="@color/black"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/guest_tab"
                        android:text="@string/title_guests"
                        android:clickable="true"
                        android:focusable="true" />
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_house_keeping"
                        android:id="@+id/house_keeping_tab"
                        android:clickable="true"
                        android:focusable="true" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_service_provider"
                        android:id="@+id/service_tab"
                        android:clickable="true"
                        android:focusable="true" />

                </com.google.android.material.tabs.TabLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="18dp"
                android:id="@+id/linear"
                app:layout_constraintTop_toBottomOf="@+id/relative"
                android:background="@drawable/bg_card_corner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_in"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/futura_round_medium"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:text="@string/check_in_with_count"
                    android:textColor="@color/colorPrimaryDark"
                     />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/tv_out"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:fontFamily="@font/futura_round_medium"
                    android:gravity="center"
                    android:text="@string/check_out_with_count"
                    android:textColor="@color/black"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:id="@+id/search_bar"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_search"
                app:layout_constraintTop_toBottomOf="@id/linear"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/image" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:theme="@style/EditTextTheme"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/search"
                    android:background="@null"
                    android:fontFamily="@font/futura_round_medium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/linear"
                    android:autofillHints="name"
                    tools:targetApi="o"
                    android:imeOptions="actionSearch"
                    android:inputType="textPersonName"
                    tools:ignore="LabelFor" />
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/search_bar"
                android:id="@+id/viewPager"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>